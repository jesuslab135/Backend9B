# Dockerfile
FROM python:3.11-slim

# Variables de entorno
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Directorio de trabajo
WORKDIR /app

# Instalar dependencias del sistema
RUN apt-get update && apt-get install -y \
    gcc \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Copiar requirements
COPY requirements.txt .

# Instalar dependencias de Python
RUN pip install --upgrade pip && \
    pip install -r requirements.txt

# Copiar proyecto
COPY . .

# Crear directorios necesarios
RUN mkdir -p models staticfiles media logs

# Exponer puerto
EXPOSE 8000

# Comando por defecto - Usar Daphne para soporte WebSocket
# Ejecutar collectstatic antes de iniciar el servidor
CMD ["/bin/sh", "-c", "python manage.py collectstatic --noinput --clear && daphne -b 0.0.0.0 -p ${PORT:-8000} WearableApi.asgi:application"]
